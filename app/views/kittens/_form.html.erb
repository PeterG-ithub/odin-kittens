<% if kitten.errors.any? %>
  <% kitten.errors.full_messages.each do |error_message| %>
    <%= error_message %> <br />
  <% end %>
<% end %>
<%= form_with model: kitten do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :age %><br>
    <%= form.text_field :age %>
  </div>
  <div>
    <%= form.label :cuteness %><br>
    <%= form.text_field :cuteness %>
  </div>
  <div>
    <%= form.label :softness %><br>
    <%= form.text_field :softness %>
  </div>
  <div>
    <%= form.submit "Save kitten info" %>
  </div>
<% end %>